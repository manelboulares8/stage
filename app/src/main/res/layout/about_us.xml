<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUs">

    <!-- Bouton Retour -->
    <ImageView
        android:id="@+id/retourner"
        android:layout_width="50dp"
        android:layout_height="43dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:contentDescription="@string/logo_description"
        android:src="@drawable/retourner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Logo -->

    <!-- Titre "À propos de nous" -->

    <!-- Bienvenue --><![CDATA[
    //app:layout_constraintTop_toBottomOf="@id/logo_image" />



    ]]><!-- Remerciements -->

    <TextView
        android:id="@+id/about_us_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingBottom="16dp"
        android:text="À propos de nous"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.855"
        app:layout_constraintLeft_toRightOf="@id/logo_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/retourner"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="115dp"
        android:layout_height="98dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/logo_description"
        android:src="@drawable/logoo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/retourner" />

    <TextView
        android:id="@+id/bienvenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Bienvenue sur Aigles !"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo_image" />

    <TextView
        android:id="@+id/thanks"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="432dp"
        android:text="Merci de choisir Aigles, Nous sommes ravis de faire partie de votre quotidien !"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bienvenue" />

    <TextView
        android:id="@+id/about_us_content"
        android:layout_width="0dp"
        android:layout_height="420dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/white"
        android:gravity="start"
        android:lineSpacingExtra="4dp"
        android:padding="16dp"
        android:text="Aigles est votre application innovante qui rend vos tâches quotidiennes plus simples et rapides grâce à la technologie de lecture de codes QR.\n\nAvec Aigles, vous pouvez :\n- Scanner des codes QR en un instant.\n- Accéder à des informations précises et fiables.\n- Profiter d'une interface intuitive pour une expérience utilisateur optimale.\n\nNotre mission est de vous offrir une solution technologique rapide, efficace et facile à utiliser pour simplifier vos processus."
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bienvenue" />


</androidx.constraintlayout.widget.ConstraintLayout>
