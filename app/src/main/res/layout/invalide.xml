<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="94dp"
        android:layout_height="101dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="52dp"
        android:contentDescription="@string/logo_description"
        android:src="@drawable/logoo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logonom"
        android:layout_width="247dp"
        android:layout_height="113dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="52dp"
        android:contentDescription="@string/logo_description"
        android:src="@drawable/logonom"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/user"
        android:layout_width="27dp"
        android:layout_height="30dp"
        android:layout_marginStart="312dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/logo_description"
        android:src="@drawable/user"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tag"
        android:layout_width="295dp"
        android:layout_height="37dp"
        android:layout_marginEnd="16dp"
        android:text="Une vigilance sans faille, une sécurité sans égal"
        android:textColor="@color/black"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="180dp"
        app:layout_constraintTop_toBottomOf="@id/logonom"/>

    <ImageView
        android:id="@+id/x"
        android:layout_width="77dp"
        android:layout_height="51dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="248dp"
        android:contentDescription="@string/logo_description"
        android:src="@drawable/xx"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="116dp"
        android:text="Code QR non valide  "
        android:textColor="@color/redd"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/x"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/info"
        android:layout_width="305dp"
        android:layout_height="153dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/resulttxt"
        android:padding="16dp"
        android:text="Ce code QR n'est pas conforme au format de la Fonction Publique"
        android:textColor="@color/black"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result"

        />

    <ImageView
        android:id="@+id/retourner"
        android:layout_width="37dp"
        android:layout_height="38dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="576dp"
        android:contentDescription="@string/logo_description"
        android:src="@drawable/retourner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>