<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="94dp"
        android:layout_height="101dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="52dp"
        android:contentDescription="@string/logo_description"
        android:src="@drawable/logoo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logonom"
        android:layout_width="247dp"
        android:layout_height="113dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="52dp"
        android:contentDescription="@string/logo_description"
        android:src="@drawable/logonom"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/user"
        android:layout_width="33dp"
        android:layout_height="36dp"
        android:layout_marginStart="312dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/logo_description"
        android:src="@drawable/user"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tag"
        android:layout_width="295dp"
        android:layout_height="37dp"
        android:layout_marginEnd="16dp"
        android:text="Une vigilance sans faille, une sécurité sans égal"
        android:textColor="@color/black"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="180dp"
        app:layout_constraintTop_toBottomOf="@id/logonom"/>

    <ImageView
        android:id="@+id/done"
        android:layout_width="113dp"
        android:layout_height="65dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="212dp"
        android:contentDescription="@string/logo_description"
        android:src="@drawable/done"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result"
        android:layout_width="295dp"
        android:layout_height="37dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="28dp"
        android:text="Code QR valide pour les informations suivantes "
        android:textColor="@color/red"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/done"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/info"
        android:layout_width="307dp"
        android:layout_height="263dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/resulttxt"
        android:padding="16dp"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result" />

    <ImageView
        android:id="@+id/retourner"
        android:layout_width="50dp"
        android:layout_height="43dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="632dp"
        android:contentDescription="@string/logo_description"
        android:src="@drawable/retourner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>